<% if @task.errors.any? %>
  $('#task_error_div').html("<%= j render partial: 'task_error_partial' %>")
<% else %>
  $('#task_table').append("<%= j render partial: 'new_task_status' %>");
  $('#flashDiv').html("<%= j render partial: 'layouts/flash_message' %>");
<% end %>


$('#task_form')[0].reset();
$("#flashDiv" ).fadeOut(3000);
$('#task_error_div').fadeOut(5000);
