<div class="col-md-4">
  <div class="panel card">
    <div class="card-img-top">
      <%# if @team.image? %>
        <%= link_to image_tag( @team.image.url, class: "style_image"), add_to_team_team_path(id: @team.id) %>
      <%#else %>
        <%#= link_to image_tag ("group.jpg"), add_to_team_path(@team)%>
      <%#end %>
    </div>
    <div class="card-block">
      <h4 class="card-title"><%= @team.name %></h4>
      <p class="card-text">Size :<%= @team.max_no_users %></p>
      <% if current_user.admin? %>
        <div class="row">
          <div class="col-md-6">
            <%= link_to 'Edit Team', edit_team_path(@team), class: "btn btn-primary" %>
          </div>
          <%= link_to 'Delete Team', show_delete_modal_team_path(id: @team.id),  {remote: true, 'data-toggle' =>  "modal", 'data-target' => '#delete_modal-window', 'class' => "btn btn-primary"}  %>
        </div>
      <%else%>
          <%= link_to 'Left Team', remove_user_team_path(user_id: current_user.id,id: @team.id), class: "btn btn-primary" %>
      <%end%>
    </div>
  </div>
</div>

