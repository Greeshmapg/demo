<div class="bodyDiv">
  <% if  !current_user.admin? %>
    <div class="row">
      <div class="col-md-4">
        <%= render 'profile'%>
      </div>
      <div class="col-md-8">
        <%= form_for(@user) do |f| %>
          <div class="row">
            <div class="col-md-3 label">
              <%= "Name" %>
            </div>
            <div class="col-md-3 label">
              <%= @user.full_name %>
            </div>
            <div class="col-md-6 label">
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-md-3 label">
              <%= "DOB" %>
            </div>
            <div class="col-md-3 label">
              <%= @user.dob.strftime("%d/%m/%Y")%>
            </div>
            <div class="col-md-6 label">
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-md-3 label">
              <%= "Phone Number" %>
            </div>
            <div class="col-md-3 label">
              <%= @user.phone_number %>
            </div>
            <div class="col-md-6 label">
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-md-3 label">
              <%= "email" %>
            </div>
            <div class="col-md-3 label">
              <%= @user.email %>
            </div>
            <div class="col-md-6 label">
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-md-2 label">
           </div>
            <div class="col-md-3 label">
              <centre><%= link_to "EDIT PROFILE", view_edit_profile_user_path(@user), class: "btn btn-primary" %></centre>
            </div>
          </div>
        <%end%>
      </div>
    </div>
  <% else %>
    <div class="row">
      <%= render 'profile' %>
    </div>
  <% end %>
</div>





