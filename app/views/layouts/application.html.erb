<!DOCTYPE html>
<html>
  <head>
    <title>Demo</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

      <header class="navbar navbar- navbar-inverse">
        <div class="appName">
          <h2 class="twoPadding">Demo app</h2>
        </div>
        <nav>
          <ul class="nav navbar-nav navbar-right twoPadding">
            <% if signed_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= current_user.email %> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                   <li><%= link_to 'Home', root_path %></li>
                  <li><%= link_to 'Profile', user_path(current_user) %></li>
                  <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
                </ul>
              </li>
            <% end %>
          </ul>
        </nav>
      </header>

      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>">
         <button class="close" data-dismiss="alert">Ã—</button>
        <%= message %></div>
      <% end %>

      <%= yield %>

      <footer class="footer">
        <small>
          @copyright 2014-2017 All rights reserved. Designed by Greeshma PG
        </small>
      </footer>

  </body>
</html>
